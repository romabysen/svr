{% from 'components/navbar.html.j2' import navbar %}
<!doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="{{ url_for('static', filename='defend.ico') }}">
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css"
        >
        <link
            rel="stylesheet"
            href="{{ url_for('static', filename='css/fontello.css')}}"
        >
        <title>{% block title %}{% endblock %}Squad Vehicle Reference</title>
        {% block head %}{% endblock %}
    </head>
    <body>
    {{ navbar(factions,vehicle_classes) }}
